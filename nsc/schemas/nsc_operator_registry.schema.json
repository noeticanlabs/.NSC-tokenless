{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NSC Operator Registry",
  "type": "object",
  "required": ["registry_id","version","ops"],
  "properties": {
    "registry_id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "ops": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["op_id","token","type_signature","lowering_id","resonance_projection_id","receipt_metrics","kernel_policy"],
        "properties": {
          "op_id": { "type": "integer", "minimum": 1 },
          "token": { "type": "string", "minLength": 1 },
          "type_signature": {
            "type": "object",
            "required": ["args","ret"],
            "properties": {
              "args": { "type": "array", "items": { "$ref": "nsc_type.schema.json" } },
              "ret": { "$ref": "nsc_type.schema.json" }
            },
            "additionalProperties": false
          },
          "lowering_id": { "type": "string", "minLength": 1 },
          "resonance_projection_id": { "type": "string", "minLength": 1 },
          "receipt_metrics": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
          "kernel_policy": {
            "type": "object",
            "required": ["requires_kernel_id","requires_kernel_version"],
            "properties": {
              "requires_kernel_id": { "type": "boolean" },
              "requires_kernel_version": { "type": "boolean" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
